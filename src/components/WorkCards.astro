---
import Buttons from "./Buttons.astro";
const { data } = Astro.props;
---

<a class="container" href={data.href}>
  <div>
    <div class="tekst">
      <h3>{data.title}</h3>
      <p>{data.subtitles}</p>
      {data.lillebillede && <img class="lillebillede" src={data.lillebillede} alt="Lille billede" />}
    </div>
  </div>
  <div class="bigImgContainer">
    <img src={data.cardImages} alt="Card billede" />
  </div>
</a>

<style>
  .container {
    display: flex;
    flex-direction: column;
    width: 100%;
    padding-inline: 20px;
    margin-bottom: 4rem;
  }

  .container div {
    justify-content: end;
  }

  .container img.stort-billede {
    height: 600px;
    width: 50%;
    object-fit: cover;
  }

  h3 {
    margin: 10px 0;
  }

  p {
    margin: 10px 0;
  }

  .knapforside {
    font-family: karla;
    padding: 0.5rem 2rem;
    background-color: transparent;
    color: black;
    border: 1px solid black;
    cursor: pointer;
    transition:
      background-color 0.3s,
      color 0.3s;
    display: inline-block;
    margin-top: 20px;
    margin-bottom: 3rem;
  }

  .knapforside:hover {
    background-color: #e7d9d9;
    color: black;
  }

  /* Mobil styling */
  @media (max-width: 768px) {
    .lillebillede {
      display: none;
    }

    p {
      font-size: 18px;
    }

    h3 {
      font-size: 24px;
      margin-top: 2rem;
    }

    .bigImgContainer {
      order: -1;
    }
  }

  /* Desktop styling */
  @media (min-width: 769px) {
    .tekst p {
      font-size: 18px;
      margin-bottom: 1rem;
    }

    .tekst h3 {
      font-size: 24px;
    }

    .container {
      flex-direction: row;
    }

    .container:nth-child(odd) .bigImgContainer {
      order: -1;
    }

    .container > div {
      width: 50%;
      margin-right: 20px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .container:nth-child(even) div {
      order: -1;
    }

    .lillebillede {
      display: block;
      margin: 10px 0;
    }
    .tekst {
      max-width: 200px;
    }

    img[src*="data.cardImages"] {
      flex: 2;
    }
  }
</style>
